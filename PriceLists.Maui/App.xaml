<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PriceLists.Maui"
             xmlns:converters="clr-namespace:PriceLists.Maui.Converters"
             x:Class="PriceLists.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <converters:DecimalToCurrencyConverter x:Key="DecimalToCurrencyConverter" />
            <converters:DecimalToArsCurrencyConverter x:Key="DecimalToArsCurrencyConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
